<%- include("partitions/header.ejs"); %>


    <div class="mt-5 p-5 bg-dark rounded mx-auto" style="width: fit-content;">
        <form action="/auth" method="post">
            <div class="input-group mb-3 w-100">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon1"><i class="bi-person"></i></span>
                </div>
                <input type="text" class="form-control" name="username" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3 w-100">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon2"><i class="bi-shield-lock"></i></span>
                </div>
                <input type="password" class="form-control" name="password" placeholder="Password" aria-label="Password" aria-describedby="basic-addon2">
            </div>
            <div class="input-group">
                <button type="submit" class="btn btn-primary mx-auto mt-3" style="width: 100px;">Login</button>
            </div>
        </form>
    </div>

